	 <servlet-mapping>
	  <servlet-name>jsp</servlet-name>
	  <url-pattern>*.secure</url-pattern>
	 </servlet-mapping>	
	<servlet-mapping>
		<servlet-name>PdfComunicazioneICIServlet</servlet-name>
		<url-pattern>/iciPdfNoTemplate</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DocfaPdfComunicazioneICIServlet</servlet-name>
		<url-pattern>/docfaIciPdfNoTemplate</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FormPosterServlet</servlet-name>
		<url-pattern>/formPostNoTemplate/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ExportFornituraServlet</servlet-name>
		<url-pattern>/uploadExportNoTemplate</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ExportDocfaFornituraServlet</servlet-name>
		<url-pattern>/uploadDocfaExportNoTemplate</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ExportDapFornituraServlet</servlet-name>
		<url-pattern>/dapExportNoTemplate</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ExportDocfaDapFornituraServlet</servlet-name>
		<url-pattern>/docfaDapExportNoTemplate</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PdfNotaServlet</servlet-name>
		<url-pattern>/notaPdfNoTemplate</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PdfDocfaServlet</servlet-name>
		<url-pattern>/docfaPdfNoTemplate</url-pattern>
	</servlet-mapping>	
	<servlet-mapping>
		<servlet-name>ExportComunicazioneServlet</servlet-name>
		<url-pattern>/comunicazioneExportNoTemplate</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ExportDocfaComunicazioneServlet</servlet-name>
		<url-pattern>/docfaComunicazioneExportNoTemplate</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>home.html</welcome-file>
		<welcome-file>home.htm</welcome-file>
		<welcome-file>home.jsp</welcome-file>
	</welcome-file-list>
	<error-page>
      <error-code>403</error-code>
      <location>/login-forbidden.secure</location>
   </error-page>
	<security-constraint>
		<display-name>Mui dynamic pages</display-name>
		<web-resource-collection>
			<web-resource-name>pagine</web-resource-name>
			<url-pattern>*.jsp</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>Virgilio</role-name>			
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
	<login-config>
		<auth-method>FORM</auth-method>
		<realm-name>Mui Realm Authentication</realm-name>
		<form-login-config>
			   <form-login-page>/login-redirect.jsp</form-login-page>
			   <form-error-page>/login-forbidden.secure</form-error-page>
		</form-login-config>
	</login-config>
	<security-role>
		<role-name>Virgilio</role-name>
	</security-role>
	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/mui</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
</web-app>
