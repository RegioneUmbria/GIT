		<description></description>
		<display-name>FormPosterServlet</display-name>
		<servlet-name>FormPosterServlet</servlet-name>
		<servlet-class>
			it.webred.mui.http.FormPosterServlet
		</servlet-class>
	</servlet>
	<servlet>
		<description></description>
		<display-name>ExportFornituraServlet</display-name>
		<servlet-name>ExportFornituraServlet</servlet-name>
		<servlet-class>
			it.webred.mui.output.ExportFornituraServlet
		</servlet-class>
	</servlet>
	<servlet>
		<description></description>
		<display-name>ExportDocfaFornituraServlet</display-name>
		<servlet-name>ExportDocfaFornituraServlet</servlet-name>
		<servlet-class>
			it.webred.mui.output.ExportDocfaFornituraServlet
		</servlet-class>
	</servlet>
	<servlet>
		<description></description>
		<display-name>ExportDapFornituraServlet</display-name>
		<servlet-name>ExportDapFornituraServlet</servlet-name>
		<servlet-class>
			it.webred.mui.output.ExportDapFornituraServlet
		</servlet-class>
	</servlet>
	<servlet>
		<description></description>
		<display-name>ExportDocfaDapFornituraServlet</display-name>
		<servlet-name>ExportDocfaDapFornituraServlet</servlet-name>
		<servlet-class>
			it.webred.mui.output.ExportDocfaDapFornituraServlet
		</servlet-class>
	</servlet>
	<servlet>
		<description></description>
		<display-name>PdfNotaServlet</display-name>
		<servlet-name>PdfNotaServlet</servlet-name>
		<servlet-class>
			net.skillbill.webred.pdf.PdfNotaServlet
		</servlet-class>
	</servlet>
	<servlet>
		<description></description>
		<display-name>PdfDocfaServlet</display-name>
		<servlet-name>PdfDocfaServlet</servlet-name>
		<servlet-class>
